{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        // "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "resolveJsonModule": true
        // "isolatedModules": true,
    },
    "include": ["src"]
}
